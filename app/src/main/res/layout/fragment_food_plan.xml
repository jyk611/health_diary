<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FoodPlanFragment">

    <ImageView
        android:id="@+id/back_healthcategory_button"
        android:layout_width="37dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/back_healthcategory_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_arrow_5821" />


    <TextView
        android:id="@+id/back_healthcategory_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:text="@string/back_healthcategory_title"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/foodplan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="94dp"
        android:text="@string/foodplan_title"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/foodplan_pic"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/foodplan_pic"
        app:layout_constraintStart_toEndOf="@+id/foodplan_title"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fastfood" />

    <View
        android:id="@+id/foodplan_quotebox"
        android:layout_width="288dp"
        android:layout_height="156dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="153dp"
        android:background="@drawable/foodplan_quote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/lightbulb_pic"
        android:layout_width="48dp"
        android:layout_height="75dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="50dp"
        android:contentDescription="@string/lightbulb_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lightbulb_115137" />

    <ImageView
        android:id="@+id/musclearm_pic"
        android:layout_width="79dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="230dp"
        android:contentDescription="@string/musclearm_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/muscle_arm_icon_67320"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/foodplan_quote1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:fontFamily="times"
        android:text="@string/foodplan_quote1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/foodplan_quotebox"
        app:layout_constraintTop_toTopOf="@+id/foodplan_quotebox" />

    <ImageView
        android:id="@+id/foodplan_quote2"
        android:layout_width="34dp"
        android:layout_height="17dp"
        android:layout_marginStart="128dp"
        android:contentDescription="@string/foodplan_quote2"
        app:layout_constraintBottom_toTopOf="@+id/foodplan_quote3"
        app:layout_constraintStart_toStartOf="@+id/foodplan_quotebox"
        app:layout_constraintTop_toBottomOf="@+id/foodplan_quote1"
        app:layout_constraintVertical_bias="0.52"
        app:srcCompat="@drawable/equal" />

    <TextView
        android:id="@+id/foodplan_quote3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="times"
        android:text="@string/foodplan_quote3"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/foodplan_quotebox"
        app:layout_constraintStart_toStartOf="@+id/foodplan_quotebox" />

    <ImageView
        android:id="@+id/foodpyramid_pagebox"
        android:layout_width="271dp"
        android:layout_height="110dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="350dp"
        android:contentDescription="@string/foodpyramid_pagebox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/foodpyramid_pagebox" />

    <ImageView
        android:id="@+id/caloriestracker_pagebox"
        android:layout_width="271dp"
        android:layout_height="110dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/caloriestracker_pagebox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodpyramid_pagebox"
        app:srcCompat="@drawable/caloriestracker_pagebox" />


</androidx.constraintlayout.widget.ConstraintLayout>