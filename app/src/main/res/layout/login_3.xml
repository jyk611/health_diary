<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login3_Constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginPg3">

        <View
            android:id="@+id/divider_7"
            android:layout_width="110dp"
            android:layout_height="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider_8"
            android:layout_width="110dp"
            android:layout_height="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintCircleRadius="10dp"
            app:layout_constraintStart_toEndOf="@+id/divider_7"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider_9"
            android:layout_width="110dp"
            android:layout_height="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="?android:attr/listDivider"
            android:foregroundTint="#000000"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/divider_8"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="250dp"
            android:layout_height="235dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_8"
            app:srcCompat="@drawable/male_icon" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/username_text"
            android:textColor="#B6BFAC"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_icon" />

        <TextView
            android:id="@+id/userGender_Set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/gender_title"
            android:textColor="#B6BFAC"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <TextView
            android:id="@+id/userWeight_Set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:text="@string/weight_title"
            android:textColor="#B6BFAC"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/age_Set" />

        <TextView
            android:id="@+id/height_Set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:text="@string/height_title"
            android:textColor="#B6BFAC"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userWeight_Set" />

        <TextView
            android:id="@+id/bmi_Set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:text="@string/bmi_title"
            android:textColor="#B6BFAC"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/height_Set" />

        <TextView
            android:id="@+id/user_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:text="@string/user_gender"
            android:textColor="#B6BFAC"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/userGender_Set"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <TextView
            android:id="@+id/user_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:layout_marginTop="15dp"
            android:text="@string/user_weight"
            android:textColor="#B6BFAC"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/userWeight_Set"
            app:layout_constraintTop_toBottomOf="@+id/user_age" />

        <TextView
            android:id="@+id/user_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="15dp"
            android:text="@string/user_height"
            android:textColor="#B6BFAC"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/height_Set"
            app:layout_constraintTop_toBottomOf="@+id/user_weight" />

        <TextView
            android:id="@+id/user_bmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="83dp"
            android:layout_marginTop="15dp"
            android:text="@string/user_bmi"
            android:textColor="#B6BFAC"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/bmi_Set"
            app:layout_constraintTop_toBottomOf="@+id/user_height" />

        <Button
            android:id="@+id/finish_button"
            android:layout_width="120dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#B6BFAC"
            android:text="@string/finish_string"
            android:textStyle="bold|italic"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_baseline_arrow_circle_right_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_bmi" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="120dp"
            android:layout_height="57dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#B6BFAC"
            android:text="@string/back_string"
            android:textStyle="bold|italic"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_baseline_arrow_circle_left_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bmi_Set" />

        <TextView
            android:id="@+id/age_Set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:text="@string/userAge_Text"
            android:textColor="#B6BFAC"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userGender_Set" />

        <TextView
            android:id="@+id/user_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="15dp"
            android:text="@string/user_age"
            android:textColor="#B6BFAC"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/age_Set"
            app:layout_constraintTop_toBottomOf="@+id/user_gender" />

        <TextView
            android:id="@+id/weight_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="15dp"
            android:text="@string/kg_text"
            android:textColor="#B6BFAC"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/user_weight"
            app:layout_constraintTop_toBottomOf="@+id/user_age" />

        <TextView
            android:id="@+id/height_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:text="@string/m_text"
            android:textColor="#B6BFAC"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/user_height"
            app:layout_constraintTop_toBottomOf="@+id/user_weight" />

        <TextView
            android:id="@+id/bmi_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:text="@string/bmi_unit"
            android:textColor="#B6BFAC"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/user_bmi"
            app:layout_constraintTop_toBottomOf="@+id/user_height" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>