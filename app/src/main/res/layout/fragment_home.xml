<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/iconMedicine"
        android:layout_width="49dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        app:layout_constraintStart_toEndOf="@+id/healthyTips1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/medicine" />

    <ImageView
        android:id="@+id/homeWorkoutBox"
        android:layout_width="345dp"
        android:layout_height="106dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/healthyTips3"
        app:srcCompat="@drawable/background_b6bfac" />

    <TextView
        android:id="@+id/homeWorkoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/workout_title"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/homeWorkoutBox"
        app:layout_constraintTop_toTopOf="@+id/homeWorkoutBox" />

    <TextView
        android:id="@+id/workoutProgressBarCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="103dp"
        android:layout_marginTop="44dp"
        android:text="100"
        app:layout_constraintStart_toStartOf="@+id/homeWorkoutBox"
        app:layout_constraintTop_toTopOf="@+id/homeWorkoutBox" />

    <ProgressBar
        android:id="@+id/workoutProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="69dp"
        android:layout_height="67dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_circle_background"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        app:layout_constraintStart_toStartOf="@+id/homeWorkoutBox"
        app:layout_constraintTop_toTopOf="@+id/homeWorkoutBox" />

    <TextView
        android:id="@+id/workoutTimerUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="@string/workout_timer_unit"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/workoutProgressBar"
        app:layout_constraintTop_toTopOf="@+id/homeWorkoutBox" />

    <ImageView
        android:id="@+id/iconWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintEnd_toEndOf="@+id/homeWorkoutBox"
        app:layout_constraintTop_toTopOf="@+id/homeWorkoutBox"
        app:srcCompat="@drawable/workout" />

    <TextView
        android:id="@+id/exerciseSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="4dp"
        android:text="@string/exercise_summary"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/homeWorkoutBox"
        app:layout_constraintTop_toTopOf="@+id/homeWorkoutBox" />

    <ImageView
        android:id="@+id/homeWorkoutBox2"
        android:layout_width="345dp"
        android:layout_height="106dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeWorkoutBox"
        app:srcCompat="@drawable/background_b6bfac" />

    <TextView
        android:id="@+id/homeWaterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="@string/water_intake_title"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/homeWorkoutBox2"
        app:layout_constraintTop_toTopOf="@+id/homeWorkoutBox2" />

    <TextView
        android:id="@+id/waterProgressBarCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="103dp"
        android:layout_marginTop="44dp"
        android:text="100"
        app:layout_constraintStart_toStartOf="@+id/homeWorkoutBox2"
        app:layout_constraintTop_toTopOf="@+id/homeWorkoutBox2" />

    <ProgressBar
        android:id="@+id/waterProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="69dp"
        android:layout_height="67dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_circle_background"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        app:layout_constraintStart_toStartOf="@+id/homeWorkoutBox2"
        app:layout_constraintTop_toTopOf="@+id/homeWorkoutBox2" />

    <TextView
        android:id="@+id/waterTimerUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:text="@string/water_timer_unit"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/waterProgressBar"
        app:layout_constraintTop_toTopOf="@+id/homeWorkoutBox2" />

    <ImageView
        android:id="@+id/iconCup"
        android:layout_width="34dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintEnd_toEndOf="@+id/homeWorkoutBox2"
        app:layout_constraintTop_toTopOf="@+id/homeWorkoutBox2"
        app:srcCompat="@drawable/cup" />

    <TextView
        android:id="@+id/waterIntakeSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="20dp"
        android:text="@string/water_intake_summary"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/homeWorkoutBox2"
        app:layout_constraintTop_toTopOf="@+id/homeWorkoutBox2" />

    <ImageView
        android:id="@+id/homeWorkoutBox3"
        android:layout_width="345dp"
        android:layout_height="106dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeWorkoutBox2"
        app:srcCompat="@drawable/background_b6bfac" />

    <TextView
        android:id="@+id/homeSleepTrackerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="@string/sleep_tracker_title"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/homeWorkoutBox3"
        app:layout_constraintTop_toTopOf="@+id/homeWorkoutBox3" />

    <TextView
        android:id="@+id/homeSleepTrackerAverageSleepUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="4dp"
        android:text="@string/hour_unit"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/homeSleepTrackerAverageSleep"
        app:layout_constraintStart_toStartOf="@+id/homeWorkoutBox3" />

    <TextView
        android:id="@+id/homeSleepTrackerAverageSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="20dp"
        android:text="@string/average_sleep"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/homeWorkoutBox3"
        app:layout_constraintStart_toStartOf="@+id/homeWorkoutBox3" />

    <TextView
        android:id="@+id/homeSleepTrackerTomorrowAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="20dp"
        android:text="@string/tomorrow_alarm"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/homeWorkoutBox3"
        app:layout_constraintStart_toEndOf="@+id/homeSleepTrackerAverageSleep" />

    <ImageView
        android:id="@+id/iconClock"
        android:layout_width="44dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="@+id/homeWorkoutBox3"
        app:layout_constraintTop_toTopOf="@+id/homeWorkoutBox3"
        app:srcCompat="@drawable/clock" />

    <TextView
        android:id="@+id/sleepTrackerSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="12dp"
        android:text="@string/sleep_summary"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/homeWorkoutBox3"
        app:layout_constraintTop_toTopOf="@+id/homeWorkoutBox3" />

    <ImageView
        android:id="@+id/homeWorkoutBox4"
        android:layout_width="345dp"
        android:layout_height="106dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeWorkoutBox3"
        app:srcCompat="@drawable/background_b6bfac" />

    <TextView
        android:id="@+id/homeUserProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="@string/user_profile_title"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/homeWorkoutBox4"
        app:layout_constraintTop_toTopOf="@+id/homeWorkoutBox4" />

    <TextView
        android:id="@+id/homeUserProfileWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="12dp"
        android:text="@string/weight_title"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/homeWorkoutBox4"
        app:layout_constraintStart_toStartOf="@+id/homeWorkoutBox4" />

    <TextView
        android:id="@+id/homeUserProfileWeightUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="5dp"
        android:text="@string/weight_unit"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/homeUserProfileWeight"
        app:layout_constraintStart_toStartOf="@+id/homeWorkoutBox4" />

    <TextView
        android:id="@+id/homeUserProfileHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="12dp"
        android:text="@string/height_title"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/homeWorkoutBox4"
        app:layout_constraintStart_toStartOf="@+id/homeWorkoutBox4" />

    <TextView
        android:id="@+id/homeUserProfileHeightUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginBottom="5dp"
        android:text="@string/height_unit"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/homeUserProfileHeight"
        app:layout_constraintStart_toStartOf="@+id/homeWorkoutBox4" />

    <TextView
        android:id="@+id/homeUserProfileBmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="252dp"
        android:layout_marginBottom="12dp"
        android:text="@string/bmi_title"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/homeWorkoutBox4"
        app:layout_constraintStart_toStartOf="@+id/homeWorkoutBox4" />

    <TextView
        android:id="@+id/homeUserProfileBmiUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="288dp"
        android:layout_marginBottom="5dp"
        android:text="@string/bmi_unit"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/homeUserProfileBmi"
        app:layout_constraintStart_toStartOf="@+id/homeWorkoutBox4" />

    <ImageView
        android:id="@+id/iconUser"
        android:layout_width="31dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="@+id/homeWorkoutBox4"
        app:layout_constraintTop_toTopOf="@+id/homeWorkoutBox4"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/healthyTips1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="@string/healthy_tip1"
        android:textSize="17sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/healthyTips2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:text="@string/healthy_tip2"
        android:textSize="17sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/healthyTips1" />

    <TextView
        android:id="@+id/healthyTips3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:text="@string/healthy_tip3"
        android:textSize="17sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/healthyTips2" />
</androidx.constraintlayout.widget.ConstraintLayout>